{
  "compilerOptions": {
   
                      
    "module": "commonjs",                                  
    "outDir": "./dist",             
    "esModuleInterop": true, 
          "moduleResolution": "node",              
    "forceConsistentCasingInFileNames": true, 

   
   
    "target": "ES2020",

   
    "rootDir": "src",
   
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}